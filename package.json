{
  "name": "@comics-arts/awesome-components",
  "version": "0.2.1",
  "description": "The Awesome Components Library",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "test": "vitest run",
    "test-watch": "vitest",
    "test:ui": "vitest --ui",
    "format": "prettier --write --parser typescript '**/*.{ts,tsx}'",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore --fix",
    "build": "tsc && vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "badge:version": "node ./src/scripts/version.badge.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format",
      "npm run lint",
      "npm run test"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@comics-arts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Comics-arts/awesome-components.git"
  },
  "keywords": [
    "react",
    "typescript"
  ],
  "author": "Igor Arruda (igorrarruda@gmail.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Comics-arts/awesome-components/issues"
  },
  "homepage": "https://github.com/Comics-arts/awesome-components#readme",
  "devDependencies": {
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-themes": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/test": "^8.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/react": "^18.2.65",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "badge-maker": "^3.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.0.0",
    "styled-components": "^6.1.8",
    "typescript": "^5.4.2",
    "vite": "^6.2.6",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "styled-components": "^6.1.8"
  }
}
